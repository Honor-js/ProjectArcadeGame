<Window x:Class="ProjectArcadeGame.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectArcadeGame"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800" WindowState="Maximized">
    <Canvas KeyDown="KeyPress" KeyUp="KeyRelease" x:Name="GameCanvas" Focusable="True" Background="White">
        <Rectangle
            x:Name="Player"
            Fill="Red"
            Height="75"
            Width="75"
            Canvas.Left="10"
            Canvas.Top="296"/>
        <Rectangle
            x:Name="Ground"
            Fill="Green"
            Height="50"
            Width="2000"
            HorizontalAlignment="Stretch"
            Canvas.Top="371"/>
        <Rectangle  x:Name="UnderGround"
            Fill="Tan"
            Height="1000"
            Width="2000"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
            Canvas.Top="420"/>
        <Label Content="Time"/>

    </Canvas>
</Window>
